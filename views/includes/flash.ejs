<!-- success flash -->

<% if (success && success.length > 0) { %>
<div
  class="alert alert-success col-6 offset-3 mt-3 alert-dismissible fade show"
>
  <p style="text-align: center"><%= success[0] %></p>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>

<!-- error flash -->

<% } %> <% if (error && error.length > 0) { %>
<div class="alert alert-danger col-6 offset-3 mt-3 alert-dismissible fade show">
  <p style="text-align: center"><%= error[0] %></p>

  <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
</div>
<% } %>
