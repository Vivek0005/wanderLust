<% layout('layouts/boilerplate') %>

<br />

<div class="row mt-3">
  <div class="col-8 offset-2">
    <h3><%= listing.title %></h3>
    <br />
    <div class="card listing-card1 col-8">
      <img
        src="<%= listing.image %>"
        class="card-img-top show-img"
        alt="Listing Image"
      />
    </div>
    <div class="col mb-3">
      <div class="card-body">
        <p class="card-text mt-2">
          <i>Owner : <%= listing.owner.username %></i>
        </p>
        <p class="card-text mt-1">
          <strong>Description:</strong> <%= listing.description %> <br />
        </p>
        <p class="card-text mt-1">
          <strong>Price:</strong> &#8377; <%= listing.price %> <br />
        </p>
        <p class="card-text mt-1">
          <strong>Location:</strong> <%= listing.location %> <br />
        </p>
        <p class="card-text mt-1">
          <strong>Country:</strong> <%= listing.country %> <br />
        </p>
      </div>

      <% if (CurrentUser && CurrentUser._id.equals(listing.owner._id)) { %>
      <div class="row mt-2">
        <div class="col-3">
          <a href="/listings/<%= listing._id %>/edit" class="btn edit-btn mt-3"
            >Edit Listing</a
          >
        </div>
        <div class="col-4">
          <form
            method="POST"
            action="/listings/<%= listing._id %>?_method=DELETE"
            class="mt-3"
            onsubmit="return confirmDelete()"
          >
            <button type="submit" class="btn btn-dark">Delete Listing</button>
          </form>
        </div>
      </div>
      <% } %>
    </div>
  </div>

  <% if (CurrentUser) { %>

  <div class="col-8 offset-2 mt-4 mb-4">
    <hr />
    <h4>Leave a review</h4>

    <form
      action="/listings/<%= listing._id %>/reviews"
      method="post"
      novalidate
      class="needs-validation"
    >
      <div class="mt-3">
        <label for="rev-rating" class="form-label">Rating : </label><br />
        <input
          type="range"
          class="form-range"
          name="review[rating]"
          id="rev-rating"
          min="0"
          max="5"
        />
      </div>

      <div class="mt-3">
        <label for="comment" class="form-label">Review : </label><br />
        <textarea
          name="review[comment]"
          id="comment"
          class="form-control"
          rows="3"
          cols="35"
          required
        ></textarea>
        <div class="invalid-feedback">Please enter a review !</div>
      </div>

      <button type="submit" class="btn btn-dark mt-4">Submit</button>
    </form>

    <% } %>
    <div class="row offset-2">
      <div class="col-8">
        <hr />
      </div>
      <h3>All Reviews</h3>
      <% listing.reviews.forEach((review) => { %>
      <div class="card col-5 mt-3 ms-4">
        <div class="card-body">
          <h5 class="card-title">@ <%= review.author.username %></h5>
          <p class="card-text"><%= review.comment %></p>
          <p class="card-text"><%= review.rating %> stars</p>

          <form
            action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
            method="post"
            class="mt-3 mb-3"
            onsubmit="return confirmDeleteReview()"
          >
            <button type="submit" class="btn btn-sm btn-dark">Delete</button>
          </form>
        </div>
      </div>
      <% }); %>
    </div>
  </div>
</div>

<script>
  //Confirm delete
  
  function confirmDelete() {
    return confirm("Are you sure you want to delete this listing?");
  }

  function confirmDeleteReview() {
    return confirm("Are you sure you want to delete this review?");
  }
</script>
