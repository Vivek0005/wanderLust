<% layout('layouts/boilerplate') %>

<div class="row mt-3">
  <div class="col-8 offset-2">
    <h3>Listing Details : </h3>
    <br />
    <div class="card col-8">
      <img
        src="<%= listing.image %>"
        class="card-img-top show-img"
        alt="Listing Image"
      />
    </div>
    <div class="col mb-3">
      <div class="card-body">
        <h5 class="card-title mt-2"><%= listing.title %></h5>
        <p class="card-text mt-3">
          <strong>Description:</strong> <%= listing.description %> <br />
          <strong>Price:</strong> &#8377; <%=
          listing.price.toLocaleString("en-IN") %> <br />
          <strong>Location:</strong> <%= listing.location %> <br />
          <strong>Country:</strong> <%= listing.country %> <br />
        </p>
      </div>
      <div class="row mt-2">
        <div class="col-3">
          <a href="/listings/<%= listing._id %>/edit" class="btn edit-btn mt-3"
            >Edit Listing</a
          >
        </div>
        <div class="col-4">
          <form
            method="POST"
            action="/listings/<%= listing._id %>?_method=DELETE"
            class="mt-3"
          >
            <button type="submit" class="btn btn-dark">Delete Listing</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
