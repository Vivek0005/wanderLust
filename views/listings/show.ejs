<% layout('layouts/boilerplate') %>

<br />

<div class="row mt-3">
  <div class="col-8 offset-2">
    <h2><%= listing.title %></h2>
    <br />
    <div class="card listing-card1 col-10">
      <img
        src="<%= listing.image %>"
        class="card-img-top show-img col-9"
        alt="Listing Image"
      />
    </div>
    <div class="col mb-3">
      <div class="card-body">
        <p class="card-text mt-2">
          <i>Owner: <%= listing.owner.username %></i>
          <br />
          <i>Owner - Contact: <%= listing.owner.contact %></i>
        </p>
        <p class="card-text mt-1 col-11">
          <strong>Description:</strong> <%= listing.description %> <br />
        </p>
        <p class="card-text mt-1">
          <strong>Price:</strong> &#8377; <%= listing.price %> <br />
        </p>
        <p class="card-text mt-1">
          <strong>Location:</strong> <%= listing.location %> <br />
        </p>
        <p class="card-text mt-1">
          <strong>Country:</strong> <%= listing.country %> <br />
        </p>
      </div>

      <% if (CurrentUser && CurrentUser._id.equals(listing.owner._id)) { %>
      <div class="row mt-2">
        <div class="col-3">
          <a href="/listings/<%= listing._id %>/edit" class="btn edit-btn mt-3"
            >Edit Listing</a
          >
        </div>
        <div class="col-4">
          <form
            method="POST"
            action="/listings/<%= listing._id %>?_method=DELETE"
            class="mt-3"
            onsubmit="return confirmDelete()"
          >
            <button type="submit" class="btn btn-dark">Delete Listing</button>
          </form>
        </div>
      </div>
      <% } %>
    </div>

    <% if (!CurrentUser._id.equals(listing.owner._id)) { %>
    <div class="mt-3">
      <a href="/listings/<%= listing._id %>/book" class="btn btn-dark">Book</a>
    </div>
    <% } %>
  </div>

  <% if (CurrentUser && !CurrentUser._id.equals(listing.owner._id)) { %>
  <div class="col-8 offset-2 mt-4">
    <hr />
    <h4>Leave a review</h4>

    <form
      action="/listings/<%= listing._id %>/reviews"
      method="post"
      novalidate
      class="needs-validation mb-2"
    >
      <div class="mt-3">
        <fieldset class="starability-growRotate">
          <legend></legend>
          <input
            type="radio"
            id="no-rate"
            class="input-no-rate"
            name="review[rating]"
            value="1"
            checked
            aria-label="No rating."
          />
          <input
            type="radio"
            id="first-rate1"
            name="review[rating]"
            value="1"
          />
          <label for="first-rate1" title="Terrible">1 star</label>
          <input
            type="radio"
            id="first-rate2"
            name="review[rating]"
            value="2"
          />
          <label for="first-rate2" title="Not good">2 stars</label>
          <input
            type="radio"
            id="first-rate3"
            name="review[rating]"
            value="3"
          />
          <label for="first-rate3" title="Average">3 stars</label>
          <input
            type="radio"
            id="first-rate4"
            name="review[rating]"
            value="4"
          />
          <label for="first-rate4" title="Very good">4 stars</label>
          <input
            type="radio"
            id="first-rate5"
            name="review[rating]"
            value="5"
          />
          <label for="first-rate5" title="Amazing">5 stars</label>
        </fieldset>
      </div>

      <div class="mt-3">
        <label for="comment" class="form-label">Review: </label><br />
        <textarea
          name="review[comment]"
          id="comment"
          class="form-control"
          rows="3"
          cols="35"
          required
        ></textarea>
        <div class="invalid-feedback">Please enter a review!</div>
      </div>

      <button type="submit" class="btn btn-dark mt-4">Submit</button>
    </form>
  </div>
  <% } %>

  <% if (listing.reviews.length > 0) { %>
  <div class="col-8 offset-2">
    <hr />
    <h3>All Reviews</h3>
    <div class="row">
      <% listing.reviews.forEach((review, index) => { %>
        <% if (index % 2 === 0) { %>
          <div class="col-6 mt-3">
        <% } %>
            <div class="card mb-3" style="padding: 10px">
              <div class="card-body">
                <h5 class="card-title">@ <%= review.author.username %></h5>
                <p class="card-text"><%= review.comment %></p>
                <p class="starability-result" data-rating="<%= review.rating %>"></p>
                <form
                  action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
                  method="post"
                  class="mt-3 mb-3"
                  onsubmit="return confirmDeleteReview()"
                >
                  <% if (CurrentUser && CurrentUser._id.equals(review.author._id)) { %>
                    <button type="submit" class="btn btn-sm btn-dark">Delete</button>
                  <% } %>
                </form>
              </div>
            </div>
        <% if (index % 2 === 1 || index === listing.reviews.length - 1) { %>
          </div>
        <% } %>
      <% }); %>
    </div>
  </div>
  <% } %>

  <div class="col-8 offset-2">
    <br />
    <hr />
    <h3>Check out where you'll stay</h3>
    <div id="map" style="width: 100%; height: 400px"></div>
    <br />
  </div>
</div>

<script>
  let mapToken = "<%= mapToken %>";
  let listing = <%- JSON.stringify(listing) %>;

  mapboxgl.accessToken = mapToken;
  const map = new mapboxgl.Map({
    container: "map", // container ID
    style: "mapbox://styles/mapbox/outdoors-v11", // style URL
    center: listing.geometry.coordinates, // starting position [lng, lat]
    zoom: 9 // starting zoom
  });

  const marker = new mapboxgl.Marker({
    color: "red",
    draggable: true
  })
    .setLngLat(listing.geometry.coordinates)
    .setPopup(new mapboxgl.Popup({offset: 25})
    .setHTML('<h4>${listing.location}</h4><p>Exact Location Will Be Provided After Booking </p>')
    .setMaxWidth("500px"))
    .addTo(map);
</script>

<script>
  function confirmDelete() {
    return confirm("Are you sure you want to delete this listing?");
  }

  function confirmDeleteReview() {
    return confirm("Are you sure you want to delete this review?");
  }
</script>
