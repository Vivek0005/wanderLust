<% layout('layouts/boilerplate') %>

<div class="row mt-5">
  <div class="col-12 text-center">
    <i class="fas fa-check-circle success-icon"></i>
    <h2 class="mt-4">Booking Successful!</h2>
    <p class="mt-3">
      Please check your email for the booking confirmation details.
    </p>
  </div>
</div>

<style>
  .success-icon {
    font-size: 130px;
    color: red;
  }
</style>

<script>
  // Redirect to the listing page after 3 seconds
  setTimeout(() => {
    window.location.href = `/listings/<%= id %>`;
  }, 5000);
</script>
