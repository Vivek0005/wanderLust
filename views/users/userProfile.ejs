<% layout('layouts/boilerplate') %>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-12 col-md-8 col-lg-6">
      <div class="card">
        <div class="card-header text-white" style="background-color: whitesmoke; color: #222222 !important">
          <h1 class="text-center">My Profile</h1>
        </div>
        <div class="card-body">
          <form class="ms-md-5 me-md-5">
            <div class="mb-3">
              <label for="username" class="form-label">Username:</label>
              <input type="text" class="form-control" id="username" value="<%= user.username %>" disabled>
            </div>
            <div class="mb-3">
              <label for="email" class="form-label">Email:</label>
              <input type="email" class="form-control" id="email" value="<%= user.email %>" disabled>
            </div>
            <div class="mb-3">
              <label for="contact" class="form-label">Contact:</label>
              <input type="text" class="form-control" id="contact" value="<%= user.contact %>" disabled>
            </div>
            <div class="text-center mt-4 mb-3">
              <a href="/users/<%= user._id %>/edit" class="btn btn-success">Edit Profile</a>
              <a href="/users/<%= user._id %>/change-password" class="btn btn-dark ms-3">Change Password</a>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
