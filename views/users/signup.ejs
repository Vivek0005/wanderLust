<% layout('layouts/boilerplate') %>

<div class="row mt-3">
  <div class="col-6 offset-3">

    <h3 style="text-align: center;" class="mb-5">Signup to WanderLust</h3>    
    <form
      action="/signup"
      method="POST"
      class="needs-validation"
      novalidate
    >
      <div>
        <label for="username" class="form-label"> UserName : </label>
        <input
          type="text"
          name="username"
          id="username"
          placeholder="Enter username"
          class="form-control mb-3"
          required
        />
        <div class="invalid-feedback">Username required!</div>
      </div>

      <div>
        <label for="email" class="form-label"> Email : </label>
        <input
          type="email"
          name="email"
          id="email"
          placeholder="Enter email "
          class="form-control mb-3"
          required
        />
        <div class="invalid-feedback">Email required!</div>
      </div>

      <div>
        <label for="contact" class="form-label"> Contact - Number : </label>
        <input
          type="tel"
          name="contact"
          id="contact"
          placeholder="Contact"
          class="form-control mb-3"
          pattern="[0-9]{10}"
          required
        />
        <div class="invalid-feedback">Contact required!</div>
      </div>

      <div>
        <label for="username" class="form-label"> Password : </label>
        <input
          type="password"
          name="password"
          id="password"
          placeholder="Enter password"
          class="form-control mb-3"
          required
        />
        <div class="invalid-feedback">Password required!</div>
      </div>

      <button class="btn btn-success mt-3">Sign Up</button>
  </div>
</div>
