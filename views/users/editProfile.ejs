<% layout('layouts/boilerplate') %>

<div class="row mt-3">
  <div class="col-6 offset-3">
    <h3 style="text-align: center;" class="mb-5">Edit Profile</h3>    
    <form
      action="/users/<%= user._id %>?_method=PUT"
      method="POST"
      class="needs-validation"
      novalidate
    >
      <div>
        <label for="email" class="form-label">Email:</label>
        <input
          type="email"
          name="user[email]"
          id="email"
          value="<%= user.email %>"
          class="form-control mb-3"
          disabled
        />
      </div>

      <div>
        <label for="username" class="form-label">Username:</label>
        <input
          type="text"
          name="user[username]"
          id="username"
          value="<%= user.username %>"
          class="form-control mb-3"
          required
        />
        <div class="invalid-feedback">Username required!</div>
      </div>

      <div>
        <label for="contact" class="form-label">Contact Number:</label>
        <input
          type="tel"
          name="user[contact]"
          id="contact"
          value="<%= user.contact %>"
          class="form-control mb-3"
          pattern="[0-9]{10}"
          required
        />
        <div class="invalid-feedback">Contact required!</div>
      </div>

      <button class="btn btn-success mt-3">Save Changes</button>
    </form>
  </div>
</div>
